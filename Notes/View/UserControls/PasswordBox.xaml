<UserControl x:Class="Notes.View.UserControls.PasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notes.View.UserControls"
             mc:Ignorable="d" 
            Height="25" Width="200">
    <Grid>
        <Border CornerRadius="10" Background="White" Padding="0">
            <Grid>
                <TextBlock x:Name="Placeholder" Text="Введите пароль" 
                           FontSize="16" Foreground="Gray" Panel.ZIndex="2" Margin="6 0 0 0"/>
                <PasswordBox x:Name="InputedPassword" 
                  Width="194" Height="25"
                  FontSize="14" Panel.ZIndex="3"
                  BorderThickness="0" Margin="6 0 0 0"
                  Background="Transparent" VerticalContentAlignment="Center" PasswordChanged="InputedPassword_PasswordChanged"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
