<Window x:Class="TasksTracker.View.Windows.WarningWindows.ChangeAccountWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksTracker.View.Windows.WarningWindows"
        xmlns:uc="clr-namespace:TasksTracker.View.UserControls"
        WindowStyle="None" WindowStartupLocation="CenterOwner" Background="#151515"
        Title="UpdateDataWarningWindow" 
        Height="120" Width="250">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <TextBlock 
            Text="Аккаунт был успешно изменен!" Foreground="White" FontSize="16" TextWrapping="Wrap"
            Width="240" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,22,0,0"/>

            <uc:RedButton x:Name="AgreeButton" 
                          Margin="0 50 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Placeholder="Понятно" 
                          PreviewMouseLeftButtonDown="AgreeButton_PreviewMouseLeftButtonDown"/>
    </Grid>
</Window>
