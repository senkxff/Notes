<Window x:Class="TasksTracker.View.Windows.WarningWindows.UpdateDataErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksTracker.View.Windows.WarningWindows"
        xmlns:uc="clr-namespace:TasksTracker.View.UserControls"
        WindowStyle="None" WindowStartupLocation="CenterOwner" Background="#151515"
        Title="UpdateDataWarningWindow" 
        Height="150" Width="300">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <TextBlock 
            Text="Проблемы с синхронизацией:
            проверьте подключение к Интернету или вход в аккаунт!" 
            Foreground="White" FontSize="14" TextWrapping="Wrap"
            Width="280" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0"/>

        <uc:RedButton x:Name="AgreeButton" 
                      Margin="0 80 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Placeholder="Понятно" 
                      PreviewMouseLeftButtonDown="AgreeButton_PreviewMouseLeftButtonDown"/>
    </Grid>
</Window>
