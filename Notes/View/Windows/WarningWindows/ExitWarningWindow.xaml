<Window x:Class="TasksTracker.View.Windows.WarningWindows.ExitWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksTracker.View.Windows.WarningWindows"
        xmlns:uc="clr-namespace:TasksTracker.View.UserControls"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        Title="ExitWarningWindow" Height="120" Width="250" Background="#151515">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <TextBlock Text="Вы действитльно хотите выйти?" Foreground="White" FontSize="16" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Margin="0,0,0,50"/>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 50 0 0">
            <uc:RedButton x:Name="YesButton" Margin="0 0 10 0" 
                          PreviewMouseLeftButtonDown="YesButton_PreviewMouseLeftButtonDown" Placeholder="Да"/>
            <uc:GrayButton x:Name="NoButton" PreviewMouseLeftButtonDown="NoButton_PreviewMouseLeftButtonDown" 
                           Placeholder="Нет"/>
        </StackPanel>
    </Grid>
</Window>
