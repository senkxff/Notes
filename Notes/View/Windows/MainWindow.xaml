<Window x:Class="TasksTracker.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:TasksTracker.View.UserControls"
        xmlns:viewModel="clr-namespace:TasksTracker.ViewModel"
        xmlns:converters="clr-namespace:TasksTracker.Converters"
        mc:Ignorable="d"
        Height="450" Width="800" MinWidth="800"
        WindowStyle="None" Background="#1D1D1D" WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="20"/>
    </WindowChrome.WindowChrome>
    <Window.DataContext>
        <viewModel:TasksViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <converters:HexToBrushConverter x:Key="HexToBrushConverter"/>
        <converters:StringToDateConverter x:Key="StringToDateConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*" MaxWidth="305" MinWidth="200"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width=".75*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.RowSpan="3" Fill="#191919"/>
        <GridSplitter Width="5" Grid.Column="1" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Background="Red" ShowsPreview="True"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <uc:AddTaskInCollectionButton HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 5 0"
                                          ToolTip="Добавить новую задачу" Command="{Binding AddTaskCommand}"/>
        </StackPanel>

        <uc:ExitButton x:Name="ExitBtn" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 10 0"
                       MouseLeftButtonDown="ExitBtn_MouseLeftButtonDown" ToolTip="Закрыть приложение"/>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Планировщик задач" VerticalAlignment="Bottom" Foreground="Red" HorizontalAlignment="Left" 
                   FontSize="23" FontFamily="Mistral" Margin="10 0 0 0"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ваши задачи:" VerticalAlignment="Top" FontSize="23" Foreground="White" 
                   Margin="10 10 0 0" FontFamily="Br"/>
        <StackPanel Grid.Column="2" Orientation="Horizontal">
            <uc:CreateImportantButton HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5 0 0 0" ToolTip="Пометить важной" 
                                      Command="{Binding MarkAsImportantCommand}"/>
            <uc:CheckedTaskButton VerticalAlignment="Bottom" Margin="5 0 0 0" ToolTip="Пометить выполненной" Command="{Binding MarkAsCheckedCommand}"/>
            <uc:ChangeAccountButton VerticalAlignment="Bottom" Margin="5 0 0 0" ToolTip="Сменить аккаунт" Command="{Binding ChangeAccountCommand}"/>
            <uc:CalenderButton x:Name="CalenderButton" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Bottom" ToolTip="Выбрать дату из календаря"
                               MouseLeftButtonDown="CalenderButton_MouseLeftButtonDown"/>
            <uc:InputTaskTitleTextBox HorizontalAlignment="Left" FontSize="20" Foreground="White" FontWeight="Black" FontFamily="Ebrima" Background="Transparent"
                                      BorderThickness="0" VerticalAlignment="Bottom" Margin="5,0,0,0" 
                                      Text="{Binding SelectedTask.DateTask, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <uc:PrioritySelector Width="65" Height="27" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Bottom" ToolTip="Выбрать приоритет"/>
        </StackPanel>
        <Calendar x:Name="calendar" Visibility="Collapsed" SelectedDate="{Binding SelectedTask.DateTask, Converter={StaticResource StringToDateConverter}, Mode=TwoWay}" 
                  Grid.Column="2" Grid.Row="1" Panel.ZIndex="3" HorizontalAlignment="Left"/>

        <ListBox Grid.Row="1" Name="NotesViewCollection" ItemsSource="{Binding Tasks}" Background="Transparent" 
                 Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                 Height="auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                 SelectedItem="{Binding SelectedTask, Mode=TwoWay}" BorderThickness="0" FontSize="16" 
                 FontWeight="ExtraBold" Margin="10 40 0 0" VerticalAlignment="Top">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayTitle}" Foreground="{Binding PriorityColor, Converter={StaticResource HexToBrushConverter}}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="1" Grid.Column="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding SelectedTask.Images}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Width="150" Height="100" Margin="5" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBox x:Name="Title" FontSize="25" Background="Transparent" Foreground="{Binding SelectedTask.PriorityColor, Converter={StaticResource HexToBrushConverter}}" 
                             FontWeight="Black" Text="{Binding SelectedTask.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" Margin="0 0 0 0" CaretBrush="White" BorderThickness="0"/>
                    <TextBlock x:Name="Content" FontSize="18" Background="Transparent" Foreground="White" 
                               Text="{Binding SelectedTask.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>

            <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <uc:InputTaskTextTextBox Grid.Row="1" Text="{Binding SelectedTask.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,0,10"/>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0,25,15" VerticalAlignment="Bottom">
                    <uc:AddTaskInJsonButton Margin="0,0,0,5" ToolTip="Добавить в облако" Command="{Binding SaveTaskCommand}"/>
                    <uc:PinImageButton Margin="0,0,0,5" ToolTip="Прикрепить изображение" Command="{Binding AddImageCommand}"/>
                    <uc:DeleteTaskButton ToolTip="Удалить задачу" Command="{Binding DeleteTaskCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>