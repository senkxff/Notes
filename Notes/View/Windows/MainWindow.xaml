<Window x:Class="Notes.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:Notes.View.UserControls"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStyle="None" Background="#1E1E1E" WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="20"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <!-- Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".3*"/>
            <ColumnDefinition Width=".7*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.RowSpan="3" Fill="#181818"/>

        <!-- Main Buttons -->
        <uc:AccountButton Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10 0 0 0"/>
        <uc:AddButton Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 5 0"/>
        <uc:ExitButton Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 10 0"/>
        
        <!-- Title -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ваши заметки:" VerticalAlignment="Bottom" FontSize="23" Foreground="White"
                   Margin="10 0 0 0" FontFamily="Br"/>
        <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Text="Тут будет заголовок заметки" 
                   VerticalAlignment="Bottom" FontSize="23" Margin="5 0 0 0" Foreground="White" FontWeight="Black" 
                   FontFamily="Ebrima"/>
        
        <!-- Text -->
        <TextBlock Grid.Row="3" Grid.Column="1" Width="auto" Height="240" VerticalAlignment="Top" Text="Текст заметки"
                   Foreground="White" FontSize="20" Margin="5"/>
        <uc:InputNoteTextTextBox Grid.Row="2" Grid.Column="1" Height="125" VerticalAlignment="Bottom" Margin="5 0 0 5"
                                 Width="500" HorizontalAlignment="Left"/>
        
        <!-- Special Buttons -->
    </Grid>
</Window>
