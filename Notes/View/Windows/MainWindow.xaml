<Window x:Class="Notes.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:Notes.View.UserControls"
        xmlns:viewModel="clr-namespace:Notes.ViewModel"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Height="450" Width="800" MinWidth="800"
        WindowStyle="None" Background="#1D1D1D" WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="20"/>
    </WindowChrome.WindowChrome>
    <Window.DataContext>
        <!-- Создаётся экземпляр NotesViewModel -->
        <viewModel:NotesViewModel/>
    </Window.DataContext>
    <Grid>
        <!-- Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*" MaxWidth="305" MinWidth="200"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width=".75*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.RowSpan="3" Fill="#191919"/>
        <GridSplitter Width="5" Grid.Column="1" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Background="Red" ShowsPreview="True"/>

        <!-- Main Buttons -->
        <uc:AccountButton x:Name="_AccountButton" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10 0 0 0" 
                          ToolTip="Войти в систему" MouseLeftButtonDown="_AccountButton_MouseLeftButtonDown"/>
        <uc:AddButton Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 5 0"
                      ToolTip="Добавить новую заметку" Command="{Binding AddNoteCommand}"/>
        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
            <uc:CreateBoldTextButton VerticalAlignment="Bottom" Margin="5 0 0 0" ToolTip="Жирный текст"/>
            <uc:CreateItalicTextButton VerticalAlignment="Bottom" Margin="5 0 0 0" ToolTip="Наклонный текст"/>
            <uc:CreateStrikeTextButton VerticalAlignment="Bottom" Margin="5 0 0 0" ToolTip="Зачеркнутый текст"/>
            <uc:CreateUnderlineTextButton VerticalAlignment="Bottom" Margin="5 0 0 0" ToolTip="Подчеркнутый текст"/>
        </StackPanel>
        <uc:ExitButton x:Name="_ExitButton" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 10 0"
                       MouseLeftButtonDown="_ExitButton_MouseLeftButtonDown"/>

        <!-- User Name -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Гость" VerticalAlignment="Bottom" Foreground="Red" HorizontalAlignment="Center" 
                   FontSize="18" FontWeight="UltraBold" FontFamily="Mistral"/>

        <!-- Title -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ваши заметки:" VerticalAlignment="Bottom" FontSize="23" Foreground="White" 
                   Margin="10 0 0 0" FontFamily="Br"/>
        <uc:InputTitleTextTextBox Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Text="{Binding SelectedNote.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" 
                   FontSize="20" Margin="5 0 0 3" Foreground="White" FontWeight="Black" FontFamily="Ebrima" Background="Transparent"
                 BorderThickness="0"/>

        <!-- Notes List -->
        <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" Margin="5" Orientation="Vertical">
            <ListBox ItemsSource="{Binding Notes}" Background="Transparent" Foreground="White" DisplayMemberPath="Title" 
                     ScrollViewer.VerticalScrollBarVisibility="Hidden" Height="370" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectedItem="{Binding SelectedNote, Mode=TwoWay}" Margin="2.5" BorderThickness="0" FontSize="16" FontWeight="ExtraBold"/>
        </StackPanel>

        <!-- Note Content -->
        <Grid Grid.Row="2" Grid.Column="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Note Text Display -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Hidden">
                <TextBlock Text="{Binding SelectedNote.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
           Foreground="White" FontSize="20" TextWrapping="Wrap" Height="245"/>

            </ScrollViewer>

            <!-- Input Panel -->
            <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <uc:InputNoteTextTextBox Grid.Column="0" Margin="10,0,0,10" HorizontalAlignment="Stretch" Text="{Binding SelectedNote.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0,25,15" VerticalAlignment="Bottom">
                    <uc:AddNoteButton Margin="0,0,0,5" ToolTip="Добавить в облако"/>
                    <uc:PinFileButton Margin="0,0,0,5" ToolTip="Прикрепить заметку"/>
                    <uc:DeleteNoteButton ToolTip="Удалить заметку"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>