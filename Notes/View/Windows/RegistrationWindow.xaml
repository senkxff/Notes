<Window x:Class="Notes.View.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes.View.Windows" WindowStyle="none" Background="#0D0D0D"
        xmlns:uc="clr-namespace:Notes.View.UserControls"
        mc:Ignorable="d" Height="420" Width="300" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Title="RegistrationForm">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="20" />
    </WindowChrome.WindowChrome>
    <Grid>
        <TextBlock Text="ВОЙТИ В СИСТЕМУ" FontSize="18" HorizontalAlignment="Center" 
               VerticalAlignment="Top" Padding="0 13 0 0" FontFamily="Verdana" FontWeight="Black" Foreground="White"/>

        <uc:ExitButton x:Name="_ExitButton" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,15,10,0" 
                       MouseLeftButtonDown="_ExitButton_MouseLeftButtonDown"/>

        <StackPanel VerticalAlignment="Center">
            <uc:TextBox Margin="0,5,0,0" Placeholder="Введите свой логин" Width="200" Height="25"/>
            <uc:PasswordBox Margin="0,5,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <uc:RedButton Margin="0,5,0,0" Placeholder="Войти"/>
                <uc:GrayButton Margin="0,5,0,0" Placeholder="Зарегистрироваться"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
